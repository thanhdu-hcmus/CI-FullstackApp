{
    "env": {
      "browser": true,
      "es2021": true,
      "node": true,
      "jest": true  // Add this line if using Jest
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "semi": ["error", "always"],
      "quotes": ["error", "single"],
      "no-console": "warn",
      "indent": ["error", 2]
    }
  }
  